<h2 class="mt-5 text-center">Here's your collection <%= user.email %>!</h2>

<ul class="nav nav-tabs d-flex justify-content-center mt-5" id="profile-tab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="mounts-tab" data-bs-toggle="tab" data-bs-target="#mounts-tab-pane" type="button" role="tab" aria-controls="mounts-tab-pane" aria-selected="true">Mounts</button>
    </li>

    <li class="nav-item" role="presentation">
        <button class="nav-link" id="minions-tab" data-bs-toggle="tab" data-bs-target="#minions-tab-pane" type="button" role="tab" aria-controls="minions-tab-pane" aria-selected="false">Minions</button>
    </li>

    <li class="nav-item" role="presentation">
        <button class="nav-link" id="emotes-tab" data-bs-toggle="tab" data-bs-target="#emotes-tab-pane" type="button" role="tab" aria-controls="emotes-tab-pane" aria-selected="false">Emotes</button>
    </li>

    <li class="nav-item" role="presentation">
