<h2>Mounts</h2>

<% if (user.mounts.length <= 0) { %>
    <p>No mounts saved ðŸ˜ž Try searching for some to track!</p>
<% } %>

<ul>
    <% user.mounts.forEach(mount => { %>
        <li>
            <p><%= mount.name %></p>

            <form method="POST" action="/mounts/<%= mount.id %>/?_method=PUT">

                <% if (mount.obtained) { %>
                    <label for="<%= mount.id %>-obtained">Have</label>
                    <input id="<%= mount.id %>-obtained" type="radio" value="t" name="obtained" checked />

                    <label for="<%= mount.id %>-unobtained">Don't have</label>    
                    <input id="<%= mount.id %>-unobtained" type="radio" value="f" name="obtained" />

                <% } else { %>

                    <label for="<%= mount.id %>-obtained">Have</label>
                    <input id="<%= mount.id %>-obtained" type="radio" value="t" name="obtained" />

                    <label for="<%= mount.id %>-unobtained">Don't have</label>
                    <input id="<%= mount.id %>-unobtained" type="radio" value="f" name="obtained" checked />
                <% } %>

            <button type="submit">Save</button>
            </form>
            
            <form method="POST" action="/mounts/<%= mount.id %>/?_method=DELETE">
                <button type="submit">Delete me</button>
            </form>
        </li>
    <% }) %>
</ul>

