    </li>
</ul>

<div class="tab-content container text-center" id="profile-tab-content">
    <!-- Mounts Tab -->
    <div class="my-3 tab-pane fade show active" id="mounts-tab-pane" role="tabpanel" aria-labelledby="mounts-tab" tabindex="0">
        <% if (mounts.length <= 0) { %>
            <p class="my-3">No mounts saved ðŸ˜ž Try searching for some to track!</p>
        <% } %>

        <% mounts.forEach(mount => { %>
            <ul class="list-group list-group-horizontal my-3">
                <li class="list-group-item d-flex align-items-center">
                    <form class="btn-group" method="POST" action="/mounts/<%= mount.id %>/?_method=PUT">
                        <% if (mount.obtained) { %>
                                <input class="btn-check" id="<%= mount.id %>-obtained-mount" type="radio" value="t" name="obtained" checked />
                                <label class="btn btn-outline-success" for="<%= mount.id %>-obtained-mount">Have</label>

                                <input class="btn-check" id="<%= mount.id %>-unobtained-mount" type="radio" value="f" name="obtained" />
                                <label class="btn btn-outline-warning lh-1" for="<%= mount.id %>-unobtained-mount">Don't have</label>    
                        <% } else { %>
                                <input class="btn-check" id="<%= mount.id %>-obtained-mount" type="radio" value="t" name="obtained" />
                                <label class="btn btn-outline-success" for="<%= mount.id %>-obtained-mount">Have</label>

                                <input class="btn-check" id="<%= mount.id %>-unobtained-mount" type="radio" value="f" name="obtained" checked />
                                <label class="btn btn-outline-warning lh-1" for="<%= mount.id %>-unobtained-mount">Don't have</label>
                        <% } %>
                    </form>
                </li>

                <a class="list-group-item list-group-item-action d-flex justify-content-start align-items-center" href="/mounts/<%= mount.apiId %>">
                    <img class="me-2" src="<%= mount.icon %>" />
                    <h5 class="d-inline mx-2"><%= mount.name %></h5>
                </a>

                <form class="list-group-item list-group-item-danger d-flex align-items-center" method="POST" action="/mounts/<%= mount.id %>/?_method=DELETE">
                    <button class="btn btn-outline-danger" type="submit">Remove</button>
                </form>
            </ul>
        <% }) %>
    </div>

    <!-- Minions Tab -->
