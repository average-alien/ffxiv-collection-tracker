<h2 class="my-3 text-center">Here's your profile <%= user.email %>! ðŸŽ‰</h2>

<div class="container text-center my-5">
    <h3>Mounts</h3>

    <% if (user.mounts.length <= 0) { %>
        <p>No mounts saved ðŸ˜ž Try searching for some to track!</p>
    <% } %>
    
    <% user.mounts.forEach(mount => { %>
        <ul class="list-group list-group-horizontal my-3">
            <!-- TODO: Add Icon -->
            <a class="list-group-item list-group-item-action" href="/mounts/<%= mount.apiId %>"><%= mount.name %></a>
    
            <li class="list-group-item list-group-item-action">
                <form method="POST" action="/mounts/<%= mount.id %>/?_method=PUT">
                    <% if (mount.obtained) { %>
                        <input class="btn-check" id="<%= mount.id %>-obtained" type="radio" value="t" name="obtained" checked />
                        <label class="btn btn-outline-success" for="<%= mount.id %>-obtained">Have</label>
    
                        <input class="btn-check" id="<%= mount.id %>-unobtained" type="radio" value="f" name="obtained" />
                        <label class="btn btn-outline-info" for="<%= mount.id %>-unobtained">Don't have</label>    
                    <% } else { %>
                        <input class="btn-check" id="<%= mount.id %>-obtained" type="radio" value="t" name="obtained" />
                        <label class="btn btn-outline-success" for="<%= mount.id %>-obtained">Have</label>
    
                        <input class="btn-check" id="<%= mount.id %>-unobtained" type="radio" value="f" name="obtained" checked />
                        <label class="btn btn-outline-info" for="<%= mount.id %>-unobtained">Don't have</label>
                    <% } %>
    
                    <button hidden type="submit"></button>
                </form>
            </li>
    
            <form method="POST" action="/mounts/<%= mount.id %>/?_method=DELETE">
                <button class="list-group-item list-group-item-action list-group-item-danger py-3" type="submit">Remove</button>
            </form>
        </ul>
    <% }) %>
</div>

